<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.autrui.Movement_frag" >

    <!-- TODO: Update blank fragment layout -->

    		<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/bDeed"
                        android:layout_width="550sp"
						android:layout_height="250sp"
						android:background="@drawable/mainpagebutton_shape"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:text="Create a Deed"
                        android:textSize="70sp" 
                        android:textColor="#fff"
                        />

                    <Button
                        android:id="@+id/bChoosedeed"
                       android:layout_width="550sp"
						android:layout_height="250sp"
						android:background="@drawable/choose_shape"
                        android:layout_gravity="center"
                        android:text="Choose a Deed"
                        android:textSize="70sp" 
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        />

                    <Button
                        android:id="@+id/bMovements"
                       android:layout_width="550sp"
						android:layout_height="250sp"
						android:background="@drawable/movement_shape"
                        android:layout_gravity="center"
                        android:text="My Movements"
                        android:textSize="70sp" 
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        />
                    
                </LinearLayout>

</FrameLayout>
