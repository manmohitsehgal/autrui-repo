<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8F8164"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="470dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_edittext_upper"
        android:ellipsize="start"
        android:hint="                   Please Enter Full Name"
        android:textColor="#333745" 
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="470dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext_bottom"
        android:ellipsize="start"
        android:hint="                        Enter new E-mail"
        android:textColor="#333745" 
        android:textSize="25sp"/>
    
    <Button
        android:id="@+id/bconfirmChangeEditPP"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/deed_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Confirm Changes"
        android:textColor="#FFFFFF"
        android:textSize="30sp"/>

</LinearLayout>